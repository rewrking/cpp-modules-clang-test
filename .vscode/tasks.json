	"version": "2.0.0",
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": true,
		"clear": true
	},
	"tasks": [
		{
			"label": "echo",
			"type": "shell",
			"command": "./build_macos.sh",
			"windows": {
				"command": "./build_win.sh"
			},
			"group":{
				"kind": "build",
				"isDefault": true
			}
		}
	]
}